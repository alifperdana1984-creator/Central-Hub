rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Domain-based check: @eduversal.org emails
    function isEduversal() {
      return isSignedIn() &&
             request.auth.token.email.matches('.*@eduversal\\.org$');
    }

    // Manually-added users sign in via email/password — Firebase sets
    // sign_in_provider = 'password' for these accounts.
    function isEmailPasswordUser() {
      return isSignedIn() &&
             request.auth.token.firebase.sign_in_provider == 'password';
    }

    // Authorized = @eduversal.org domain OR manually-added email/password account
    function isAuthorized() {
      return isEduversal() || isEmailPasswordUser();
    }

    // Helper: read the caller's Firestore profile
    function userProfile() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isAuthorized() && userProfile().role == 'admin';
    }

    // ── users ──────────────────────────────────────────────
    match /users/{uid} {
      allow read:  if isAuthorized() && (request.auth.uid == uid || isAdmin());
      allow write: if isAuthorized() && (request.auth.uid == uid || isAdmin());
    }

    // ── schools ────────────────────────────────────────────
    match /schools/{schoolId} {
      allow read:   if isAuthorized();
      allow create, update, delete: if isAdmin();
    }

    // ── staff ──────────────────────────────────────────────
    match /staff/{staffId} {
      allow read:   if isAuthorized();
      allow create, update, delete: if isAdmin();
    }

    // ── announcements ──────────────────────────────────────
    match /announcements/{annId} {
      allow read:   if isAuthorized();
      allow create, update, delete: if isAdmin();
    }

    // ── topics (message board) ─────────────────────────────
    match /topics/{topicId} {
      allow read:   if isAuthorized();
      allow create: if isAuthorized();
      allow update: if isAuthorized() &&
                       (resource.data.author == request.auth.token.email || isAdmin());
      allow delete: if isAdmin();

      match /replies/{replyId} {
        allow read:   if isAuthorized();
        allow create: if isAuthorized();
        allow update, delete: if isAdmin();
      }
    }
  }
}
